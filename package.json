{
    "name": "contentharmony",
    "version": "1.0.0",
    "description": "",
    "demo": "https://contentharmony.com",
    "engines": {
        "ghost": ">=4.0.0",
        "ghost-api": "v4"
    },
    "author": {
        "name": "Content Harmony",
        "email": "admin@contentharmony.com"
    },
    "license": "ISC",
    "scripts": {
        "dev": "gulp",
        "zip": "gulp zip",
        "test": "gscan .",
        "test:ci": "gscan --fatal --verbose .",
        "build": "gulp build"
    },
    "gpm": {
        "type": "theme",
        "categories": [
            "Minimal",
            "Blog"
        ]
    },
    "keywords": [
        "content harmony",
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "browserslist": [
        "defaults"
    ],
    "config": {
        "posts_per_page": 12,
        "image_sizes": {
            "xxs": {
                "width": 30
            },
            "xs": {
                "width": 100
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 600
            },
            "l": {
                "width": 1000
            },
            "xl": {
                "width": 2000
            }
        }
    },
    "devDependencies": {
        "@babel/core": "^7.10.3",
        "@babel/preset-env": "^7.10.3",
        "autoprefixer": "^9.8.0",
        "beeper": "^2.0.0",
        "browser-sync": "^2.26.7",
        "cssnano": "^4.1.10",
        "gulp": "^4.0.2",
        "gulp-babel": "^8.0.0",
        "gulp-concat": "^2.6.1",
        "gulp-postcss": "^8.0.0",
        "gulp-purgecss": "^2.3.0",
        "gulp-rename": "^2.0.0",
        "gulp-sass": "^4.1.0",
        "gulp-uglify": "^3.0.2",
        "gulp-zip": "^5.0.1",
        "postcss-custom-properties": "^9.1.1",
        "postcss-easy-import": "^3.0.0",
        "pump": "^3.0.0"
    },
    "dependencies": {
        "tailwindcss": "^2.2.9"
    }
}
