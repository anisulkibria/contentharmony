
{{#get "posts" filter="tag:[blog, content-marketing-examples, updates]" include="tags,authors" }}
	<div class="extra-pagination">
		{{pagination}}
	</div>
	<div class="innerwide">
		<div class="cols-3">
			{{#foreach posts limit="24"}}
					<div class="col">
						<article class="{{post_class}} my-3">
								<div class="mb-2">
									{{#if feature_image}}
											<a href="{{url}}"><img src="{{img_url feature_image}}" style="max-width: 100%;" /></a>
									{{else}}
											<a href="{{url}}"><img src="{{asset 'images/jacks-pattern-800x600.png'}}" style="width: 100%; max-width: 100%;" /></a>
									{{/if}}
								</div>
								<div>
									<h2 class="post-title mt-1"><a href="{{url}}">{{{title}}}</a></h2>

									<span class="post-meta">
										<span class="badge badge-primary-inverted mb-1">
											{{tags limit="1" autolink="false"}}
										</span>
										<br>
										{{t "By"}}
										{{authors separator=", "}}
										{{#has tag="Updates, Docs" }}
											{{t "on"}}
											<time datetime="{{date format='DD-MM-YYYY'}}">{{date format="MMMM DD, YYYY"}}</time>
										{{/has}}
										&bull; {{reading_time minute=(t "1 min read") minutes=(t "% min read")}}

									</span>

								</div>
						</article>
					</div>
			{{/foreach}}
		</div>
	</div>

	{{pagination}}
{{/get}}
