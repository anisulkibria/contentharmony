<div class="extra-pagination">
	{{pagination}}
</div>

<script src="https://cdn.fastcomments.com/js/widget-comment-count.min.js"></script>

<div class="innerwide">
	<div class="cols-3">
		{{#foreach posts limit="24"}}
				<div class="col">
					<article class="{{post_class}} my-3">
							<div class="mb-2">
								{{#if feature_image}}
										<a href="{{url}}"><img src="{{img_url feature_image}}" style="max-width: 100%;" /></a>
								{{else}}
										<a href="{{url}}"><img src="{{asset 'images/jacks-pattern-800x600.png'}}" style="width: 100%; max-width: 100%;" /></a>
								{{/if}}
							</div>
							<div>
								<h2 class="post-title mt-1"><a href="{{url}}">{{{title}}}</a></h2>

								<span class="post-meta">
									{{#has tag="Updates, Docs, Articles, Blog" }}
										{{t "By"}}
										{{authors separator=", "}}
									{{/has}}
									{{#has tag="Updates, Docs" }}
										{{t "on"}}
										<time datetime="{{date format='DD-MM-YYYY'}}">{{date format="MMMM DD, YYYY"}}</time>
									{{/has}}
									{{#has tag="Articles, Blog" }}
										&bull; ‚è± {{reading_time minute=(t "1 min") minutes=(t "% mins")}}
									{{/has}}
									{{#has tag="Articles, Blog" }}
										&bull;  üí¨ <div id="fastcomments-widget-comment-count-{{@index}}" class="d-inline"></div>
									{{/has}}

								</span>

								<script>
								    FastCommentsCommentCount(document.getElementById('fastcomments-widget-comment-count-{{@index}}'), {
								        tenantId: 'R7qAwRilYB',
												numberOnly: true,
								        urlId: 'https://www.contentharmony.com{{url}}' // Id that represents the page, if you didn't to tie comments to the page url. You should use the same value here as in the comment widget.
								    });
								</script>

								<p class="post-excerpt">{{custom_excerpt}}</p>

							</div>
					</article>
				</div>
		{{/foreach}}
	</div>
</div>

{{pagination}}
